.row
  .col-lg-8
    table.table
      thead
        tr
          td(style='width: 50px;') #
          td Username
          td Email
          td Role
          td(style='width: 50px;') Edit
      tbody
        tr(ng-repeat='user in users track by $index')
          td(style='width: 50px;') {{$index+1}}
          td {{user.username}}
          td {{user.email}}
          td {{user.role}}
          td(style='width: 50px;')
            button.btn(ng-click='setSelectedUser($index)') Edit
  .col-lg-4
    .panel.panel-default
      .panel-heading
        .panel-title.text-center Edit {{selectedUser.username}}
      .panel-body
        .alert.alert-success(ng-if='success.length > 0') {{success}}
        form(ng-submit='editUser()', name='form', role='form')
          .form-group
            label(for='email') Email:
            input.form-control(type='email', ng-model='selectedUser.email', required='')
          .form-group
            label(for='role') Role:
            select#role.form-control(ng-model='selectedUser.role', name='role')
              option(ng-selected="selectedUser.role == 'user'", value='user') User
              option(ng-selected="selectedUser.role == 'admin'", value='admin') Admin
          .form-actions
            button.btn.btn-primary(type='submit', ng-disabled='form.$invalid || dataLoading') Update
            img(ng-if='dataLoading', src='data:image/gif;base64,')
        hr
        h4 Send Email
        form(ng-submit='sendMail()', name='form2', role='form')
          .form-group
            label(for='subject') Subject:
            input.form-control(type='subject', ng-model='userEmail.subject', required='')
          .form-group
            label(for='message') Message:
            textarea(name='message', ng-model='userEmail.message', required='')
          .form-actions
            button.btn.btn-primary(type='submit', ng-disabled='form2.$invalid || dataLoading') Send
            img(ng-if='dataLoading', src='data:image/gif;base64,')
